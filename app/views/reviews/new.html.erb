<h1> new review </h1>


<%= simple_form_for [@restaurant, @review] do |f| %>
 <% if @reviews.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @reviews.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
